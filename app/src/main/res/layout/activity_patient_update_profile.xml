<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientUpdateProfileActivity">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flex1" />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotationY="180"
        android:src="@drawable/flex1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat

            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:text="Update Patient Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

                <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/txt_first_name"
                android:hint="First Name"
                android:drawableRight="@drawable/ic_outline_person_outline_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/txt_last_name"
                android:hint="Last Name"
                android:drawableRight="@drawable/ic_outline_person_outline_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/txt_age"
                android:hint="Age"
                android:inputType="number"
                android:drawableRight="@drawable/ic_outline_person_outline_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="15dp"
                android:id="@+id/txt_chronic_diseases"
                android:hint="Chronic Diseases"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:drawableRight="@drawable/ic_outline_person_outline_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



                <EditText
                android:inputType="phone"
                android:layout_marginTop="15dp"
                android:id="@+id/txt_phone"
                android:hint="Phone Number"
                android:drawableRight="@drawable/ic_baseline_phone_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:hint="Relative Relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/sp_relative_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_solid_back"
                android:fontFamily="@font/times_new_roman_bold"
                android:text="Save" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_solid_back"
                android:fontFamily="@font/times_new_roman_bold"
                android:text="Change Password" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>




</RelativeLayout>